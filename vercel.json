{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "maxDuration": 60
    },
    "server.js": {
      "maxDuration": 60
    }
  },
  "env": {
    "OLLAMA_API_URL": "https://ai.mailbyai.site",
    "USE_MOCK_DATA": "false"
  }
} 